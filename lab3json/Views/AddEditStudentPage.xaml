<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab3json.Views.AddEditStudentPage"
             Title="Студент">

    <VerticalStackLayout Padding="10" Spacing="15">
        <Label Text="Введіть дані студента:" FontSize="16" FontAttributes="Bold" Margin="0,0,0,10"/>

        <Entry x:Name="NameEntry" Placeholder="ПІБ" />

        <Entry x:Name="FacultyEntry" Placeholder="Факультет" />

        <Entry x:Name="DeptEntry" Placeholder="Кафедра" />

        <Label Text="Курс:" FontSize="12" TextColor="Gray" Margin="0,0,0,-10"/>
        <Picker x:Name="CoursePicker" Title="Оберіть курс" />

        <Button Text="Зберегти" Clicked="OnSaveClicked" Margin="0,20,0,0"/>
        <Button Text="Назад" Clicked="OnBackClicked"/>
    </VerticalStackLayout>
</ContentPage>